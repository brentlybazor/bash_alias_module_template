# cd ~

# check the OS 

unameOut="$(uname -s)"

# OS is Mac
if [[ "$unameOut" == *"Darwin"* ]]; then
    myDir=$(dirname $0)
fi

# OS is Windows
if [[ "$unameOut" == *"MING"* ]]; then
    myDir="${BASH_SOURCE%/*}"
fi

__source_files () {
    for file in $@
    do
        if [[ $file == *.sh ]]; then
            source $myDir/$file
        fi
    done
}

__source_files *